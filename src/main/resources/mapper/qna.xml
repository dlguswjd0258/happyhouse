<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.happyhouse.model.dao.QnADao">

	<!-- 게시글 전체 조회 -->
	<select id="selectBoard" resultType="qnADto">
		select *
		from qna
		order by no desc
	</select>

	<!-- 게시글 상세 조회 -->
	<select id="selectBoardByNo" resultType="qnADto">
		select *
		from qna
		where no = #{no}
	</select>

	<!-- 게시글 등록 -->
	<insert id="insertBoard" parameterType="qnADto">
		insert into qna(
		title, writer, content
		) values (
		#{title}, #{writer}, #{content}
		)
	</insert>

	<!-- 게시글 수정 -->
	<update id="updateBoard" parameterType="qnADto">
		update qna
		set title = #{title},
		content = #{content}
		where no = #{no}
	</update>

	<!-- 게시글 삭제 -->
	<delete id="deleteBoard" parameterType="int">
		delete
		from qna
		where no = #{no}
	</delete>

	<!-- 답글 수정 -->
	<update id="updateReply" parameterType="qnADto">
		update qna
		set reply = #{reply}
		where no = #{no}
	</update>

	<!-- 답글 삭제 -->
	<update id="deleteReply" parameterType="int">
		update qna
		set reply = null
		where no = #{no}
	</update>

</mapper>

